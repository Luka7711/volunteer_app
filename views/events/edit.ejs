<%- include ../partials/header.ejs %>

<h1>Edit Your Event</h1>
<form action="/events/<%=event._id%>?_method=PUT" method="POST">
      <p>Name of Event:<input type="text" name="title" value="<%=event.title%>"></p>
      <p>Description:<input type="text" name="description" value="<%=event.description%>"></p>
      <p>Location:<input type="text" name="location" value="<%=event.location%>"></p>
      <p>Number of People:<input type="text" name="numberOfPeople" value="<%=event.numberOfPeople%>"></p>
      <p>Date/time:<input type="text" name="date" value="<%=event.date%>"></p>
      <p>Image:<input type="text" name="img" value="<%=event.img%>"></p>
      <input type="submit" value="Update Event"/>

    </form>


