<%- include ./partials/header.ejs %>
	<h1>Home page</h1>
<a href="/events/new">Organize your volunteer event</a> <br>

<% if(loggedIn){ %>
					
	<a href="/users/<%=user._id%>">See My Events</a></br>
	<a href="/users/logout">Sign Out</a><br>
<% }else {%>	
	 <a href="/users/login">Sign In</a>
	 <p>Don't have an account?</p>
	 <a href="/users/register">Sign Up Here</a>
<% } %>
	
	
	<% if(allEvents){ %>
		<% for (let j = 0; j < allEvents.length; j++) { -%>
			<div class="container_img">
				<img class="event_image" src="<%= allEvents[j].img %>"
				style="width:250px; height:auto">
				<p><strong><%= allEvents[j].title %></strong></p>
				<p><%= allEvents[j].date %></p>
			</div>		
		<%} %>
	<% } %>

<%- include ./partials/footer.ejs %>